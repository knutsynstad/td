{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "castle-game",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "entrypoints/splash/index.html"
      },
      "game": {
        "inline": false,
        "entry": "entrypoints/game/index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "scheduler": {
    "tasks": {
      "game-maintenance": {
        "endpoint": "/internal/scheduler/game-maintenance"
      },
      "game-tick": {
        "endpoint": "/internal/scheduler/game-tick",
        "cron": "*/1 * * * * *"
      }
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create TD post",
        "description": "Create a fresh Tower Defense post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/create-post"
      },
      {
        "label": "Reset game",
        "description": "Reset castle game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/reset-game"
      }
    ]
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "castle_game_dev"
  }
}
